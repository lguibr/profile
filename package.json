{
  "name": "base-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "parcel src/assets/index.pug",
    "build": "NODE_ENV=production parcel build src/assets/index.pug -d public",
    "postbuild": "react-snap --no-sandbox",
    "lint": "prettier-standard --check",
    "fmt": "prettier-standard --format",
    "analyzer": "npm run build && google-chrome public/report.html",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "sb": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "add:comp": "yo tremtec:component",
    "add:test": "yo tremtec:test",
    "add:duck": "yo tremtec:duck"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@types/ace": "^0.0.42",
    "ace": "^1.3.0",
    "ace-builds": "^1.4.8",
    "react": "^16.12.0",
    "react-ace": "^8.0.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "styled-components": "^4.4.1",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@storybook/addon-actions": "^5.3.1",
    "@storybook/addon-info": "^5.3.1",
    "@storybook/addon-links": "^5.3.1",
    "@storybook/addons": "^5.3.1",
    "@storybook/react": "^5.3.1",
    "@svgr/parcel-plugin-svgr": "^5.0.1",
    "@types/enzyme": "^3.10.4",
    "@types/jest": "^24.0.25",
    "@types/reach__router": "^1.2.6",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^3.0.7",
    "@types/storybook__addon-info": "^5.2.1",
    "@types/styled-components": "^4.4.2",
    "@types/webfontloader": "^1.6.29",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "generator-tremtec": "^0.1.8",
    "husky": "^4.0.7",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.4",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "prettier": "^1.19.1",
    "prettier-standard": "^16.1.0",
    "pug": "^2.0.4",
    "puppeteer": "^2.0.0",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-snap": "^1.23.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.4",
    "yo": "^3.1.1"
  },
  "alias": {
    "app": "./src/app",
    "assets": "./src/assets"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fmt && git update-index --again",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/.storybook/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/assets/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/src/assets/__mocks__/styleMock.js",
      "^app(.*)$": "<rootDir>/src/app$1",
      "^assets(.*)$": "<rootDir>/src/assets$1"
    },
    "setupFiles": [
      "<rootDir>jest/config.js"
    ],
    "setupFilesAfterEnv": [
      "./jest/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "reactSnap": {
    "source": "public",
    "minifyHtml": {
      "collapseWhitespace": true,
      "removeComments": true
    },
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-gpu"
    ]
  }
}
